<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>Root auth code</th>
    <th>Last message</th>
    <th>Private</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.topic %></td>
    <td><%= room.root_auth_code %></td>
    <td><%= room.last_message_id %></td>
    <td><%= room.private %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

